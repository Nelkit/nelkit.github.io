@import 'normalize'
@import 'mixins'
@import 'fonts'
@import 'fullpages'
@import 'grid'
@import 'nib/images'
@import 'animation'
@import 'animate-stylus/index'
@import 'prism'



html
  height: 100%
  width: 100%
body
  font-size 14px
  height: 100%
  width: 100%
  margin: 0
  padding: 0
  color: #fff
  font-family: openSansRegular, arial, helvetica
  image('../img/bg.jpg')
  background-size: cover
  background-repeat: no-repeat
  background-position: top center
  background-attachment: fixed
  letter-spacing -.3em

a 
  text-decoration none
  color #353535

.link
  text-decoration none
  font-style italic
  &:hover
    text-decoration none
    border-bottom 1px dotted #353535
  
.linkBlog
  color #4a8dbb !important
  text-transform uppercase
  &:hover
    border-bottom 1px dotted #4a8dbb !important

.field
  background transparent
  margin-right 10px
  margin-bottom 10px
  padding 1em 1.5em
  border 0px
  radius(3px,3px,3px,3px)
  font-size 1.3em
  box-sizing(border-box)

.field:focus
  outline 0px
  
.fieldContact
  background: rgba(0, 0, 0, .3)
  width 100%

.btn
  background transparent
  display inline-block
  
.btn:focus
  outline none
  
.separatorBlog
  border 0px
  border-bottom 2px dashed rgba(0, 0, 0, .1)
  margin 60px 0px 30px 0px
  
.blogActive
  color #ff7f79 !important
  border-bottom 1px solid #ff7f79
.projectActive
  color #ff7f79 !important
  border-bottom 1px solid #ff7f79

.titleSection
  font-size 2em

#header
  display none
  background rgba(0, 0, 0, .8)
  vertical-align bottom
  width 100%
  overflow hidden
  position fixed
  z-index 100
  letter-spacing normal
  text-align center
  & button
    display none
  & .menu
    display block
    & .itemMenu:nth-last-child(1)
      border-right 0px
    & .itemMenu
      display inline-block !important
      padding 0px 20px 
      width auto !important
      border-bottom 0px
      border-right 1px solid rgba(255, 255, 255, .2)
      & .icon:before
        font-size 1em !important
        display inline-block
      & .descrip
        font-size 1em
        color white
        display inline-block
        
& .menu
  & .active
    color #ff7f79 !important
    border-bottom 2px solid #ff7f79
  a:hover
    color #ff7f79 !important
 
.pages
   letter-spacing normal
   box-sizing(border-box)
   
.skills 
  background rgba(0,0,0, .7) 
  color #ddd
  padding 0px 4.3em
        
   
.portfolio
   background: #eff0f2
   color #36383b 
   padding 0px
   padding 4em 4em 2em 4em
   & .bottomPortfolio
     text-align center
     a
      color #11a5c6
      display inline-block
      border 1px solid #11a5c6
      radius(4px,4px,4px,4px)
      box-sizing(border-box)
      padding .3em 1em
      &:hover
        background: #11a5c6
        color: #eff0f2
       
   
.figPortfolio
  shadow(0px,2px,0px,#ddd)
  border 2px solid white
  background: white
  width 95%
  margin-right 2px
  margin-left .3em
  &:hover
    shadow(0px,0px,0px,#ddd)  
    position relative
    border 2px solid #11a5c6
    top: 2px;  
  &:nth-last-child(1)
    margin-bottom 20px
  & .titlePortfolio
    text-transform: uppercase
    display block
    padding 5px 8px 3px 8px
    font-family openSansRegular
    font-size 1.3em
  & .subtitlePortfolio
    text-transform: capitalize
    padding 3px 8px 5px 8px
    display block  
    font-family openSansLight
  & hr
    border-bottom 1px solid #ddd
    border-top 0px
    border-left 0px
    border-right 0px
    width 10%
    margin 0px auto
  & figcaption
    position relative
    
.categoryProject
  position absolute
  top: -30px;
  left: 10px;
  & span
    display inline-block
    background: rgba(0, 0, 0, .75)
    color white
    padding 0px 5px
    margin-left 3px
    radius(4px,4px,4px,4px)
.containerCategory
  position relative

      
.contact
  background rgba(65,11,56, .9)
  color #ddd
  
  & .wrapperContact
    width 60%
    margin 190px auto
  
.btnContact
  radius(4px,4px,4px,4px)
  box-sizing(border-box)
  padding .3em 2em
  font-size 1.4em
  border 2px solid #c3c3c3
  &:hover
    color #4a1842
    background rgba(255, 255, 255, .75)
    border 2px solid transparent

.warning
  display inline-block
  box-sizing(border-box)
  padding .3em 2em 
  radius(5px,5px,5px,5px)
  background #E74C3C
  border-bottom 2px solid #C0392B

.success
  display inline-block
  box-sizing(border-box)
  padding .3em 2em 
  radius(5px,5px,5px,5px)
  color #1C6F3F
  background #2ECC71
  border-bottom 2px solid #1C6F3F

.hide
  display none
  
.footer
  width 100%
  text-align center
  padding 2em 0px
  box-sizing(border-box)
  background rgba(54, 0, 50, 1) 
  letter-spacing normal

.about
  background rgba(0, 0, 0, .5)

.ContentRight
  display inline-block
  vertical-align middle
  overflow hidden
  box-sizing(border-box)
  padding 2em
  width 67%
  & .biography
    letter-spacing normal
    color #d8d6dd
    background: rgba(255, 255, 255, .8)
    radius(0px,0px,6px,6px)
    box-sizing(border-box)
    padding 2em 6em
    & h3
      color #666
      font-size 2em
      text-align center
      font-family openSansRegular
      font-weight normal
    & p
      color rgba(4, 4, 4, .6)
      font-family openSansLight
      font-weight normal
      font-size 1.4em
      line-height 1.6em

  & .menuDesktop
    background rgba(0, 0, 0, .5)
    radius(6px,6px,0px,0px)
    display block
    overflow hidden
    width auto
    margin 0px auto 0px auto
    letter-spacing normal
    text-align center
    & .menu
      display block
      & .itemMenu:nth-last-child(1)
        border-right 0px
      & .itemMenu
        padding 0px 20px 
        display inline-block !important
        width auto !important
        border-bottom 0px
        border-right 1px solid rgba(255, 255, 255, .2)
        & .icon:before
          font-size 1em !important
          display block
        & .descrip
          font-size 1em
          color white
          display inline-block

.contentWrapper
  letter-spacing normal
  width: 33%
  height: 100%
  max-height: 100%
  overflow hidden
  display inline-block
  vertical-align middle
.wrapper
  width: 104%
  height: 100%
  max-height: 100%
  overflow-y scroll
      
  & .fotoPerfil
    display block
    margin 30px auto 38px auto 
    width 221px
    height 221px
    radius(50%,50%,50%,50%)
    shadow(0px,2px,4px,rgba(0, 0, 0, .5))
    
  & .content
    text-align center
    & .name  
      font-family bellota
      font-size 2.2em
    & .separatorName
      width 200px
      border:1px solid rgba(255, 255, 255, .5)
    & .ocuppation
      font-family openSansRegular
      font-size 1em
    & .btn-social
      position relative
      background rgba(0, 0, 0, .6)
      width 220px
      margin .6em auto
      radius(4px,4px,4px,4px)
      font-size 1.4em
      font-family openSansRegular
      padding .6em
      color white
      border 1px solid transparent
      &:before 
        font-size 1.7em
        position absolute
        top 7px
        left 14px
      &:hover
        border 1px solid #1f6fee
        color #1f6fee
.menu
  display none
  list-style none
  padding 7px 20px
  
  & .itemMenu
    box-sizing(border-box)
    width 100%
    text-align center
    font-size 1.4em
    padding 9px
    border-bottom 1px solid rgba(255, 255, 255, .1)
    & a
      color white
  & .itemMenu:nth-last-child(1)
    border-bottom 0px

.topMenu
  width 100%
  height 90px
  background rgba(0, 0, 0, .4)
  position absolute
  letter-spacing normal
  z-index 2
  
  & #menuBtn
    display none
  
  & .avatar
    display block
    width 120px
    height 120px
    position absolute
    top 1em 
    left 5%
    radius(50%,50%,50%,50%)
    shadow(0px,2px,4px,rgba(0, 0, 0, .5))
    
  & .meMenu
    width 80%
    box-sizing(border-box)
    text-align center
    display block
    margin 30px auto
    & .itemMenu:nth-last-child(1)
      border-right 0px      
    & .itemMenu
      position relative
      border-right 2px solid white
      padding 0px 1.4em
      font-size 1.4em
      display inline-block !important
      & a
        color white
        &:hover
          color #ff7f79 !important
  & button 
    border 0px
    position absolute
    top 35px
    right 20px
    

.wrapperMe
  width 100%
  letter-spacing normal
  position absolute
  padding-top 90px;
  box-sizing(border-box)
  min-height 100%
  & .view
    display block
    & .page
      overflow hidden
      background white
      box-sizing(border-box)
      color black
      display block
      position relative
      min-height 100%
      width 80%
      margin 0px auto
      shadow(0px,0px,4px,rgba(0, 0, 0, .5))
      & .titleBlog
        width 100%
        padding 1em
        text-align center
        color #8d8d8d
        background #f5f5f5
        border-bottom 1px solid #ddd
        & h1
          font-size 1.4em !important
      & .contentBlog
        width 100%
        text-align center
        & img
          max-width 100%
      & img
        max-width 100%
      & .containerProjects
        box-sizing(border-box)
        padding 1em 8em 4em 8em
        width 100% 
        & .figPortfolio
          shadow(0px,0px,2px,rgba(0, 0, 0, .15))
          border 0px
          &:hover
            top:0px
            border 2px solid #11a5c6
            box-sizing(border-box)
            shadow(0px,0px,0px,rgba(0, 0, 0, .15))
        & a
          color #232424
          &:hover
            text-decoration none
      & .containerBlog 
        box-sizing(border-box)
        text-align center
        padding 2em 8em 4em 8em
        width 100%    
      & .mainImage
        width 100%   
      & a
        color #232424
        &:hover
          border-bottom 1px dotted #232424
          
      & .title
        font-family montserrat
        text-transform capitalize
        line-height 1em
        font-size 1.7em
        color #3a3a3a
      & .subtitle
        font-family openSansLight
        font-size 1.2em   
        color #888
      & .date
        font-family openSansLight
        font-size 1em   
        font-style italic
        color #888
      & .descrip
        font-family openSansLight
        font-size 1.2em  
        line-height 1.6em 
        color #393939 
        & blockquote
          border-left 6px solid #bababa
          margin-left 1em
          padding-left 1em  
          font-style italic
        & strong
          font-family openSansBold
        & a
          text-decoration none
          font-family openSansRegular
          border-bottom 1px dotted rgba(0, 0, 0, .75)   
        & table
          max-width 100% !important   
          margin 0px auto
          border 1px solid #ddd
          & td
            padding .3em 1em
          & thead tr:first-child
            background: #f5f5f5
          & tbody tr:first-child
            background: #f5f5f5
      & .paragraph
        display block
        width 100%
        padding 1em 6em
        box-sizing(border-box)
        & hr
          border 0px
          border-bottom 1px solid #ddd !important
      & .breadcrumbs
        font-family openSansRegular
        color #8d8d8d
        box-sizing(border-box)
        width 100%
        background #f5f5f5
        border 1px solid #ddd   
        list-style none
        margin 0px auto
        padding .4em 4em
        & .item
          display inline-block
          margin-left 5px
          margin-right 5px
          &:after
            content '/'
            position relative
            left 8px
          &:nth-last-child(1)
            &:after
              content ''
          & a
            color #1c7fb2
            &:hover
              border-bottom 1px dashed #1c7fb2
  & .bottomMe
    width 100%
    background #efefef
    box-sizing(border-box)
    padding 1.5em 0em
    border-top 2px solid #ddd
    text-align center
    position relative
    color #606060 
    & a:before
      color #606060 
    & .btnTop:after
      cursor pointer
      font-family: Flaticon
      font-size: 2em
      font-style: normal
      border-top 2px solid #ddd
      border-left 2px solid #ddd
      border-bottom 2px solid #ddd
      margin-left -21px
      radius(8px,0px,0px,8px)
      content: "\e00b"
      box-sizing(border-box)
      padding 7px
      background #efefef
      top -39px
      left 50%
      position absolute
      transform: rotate(90deg);
      -webkit-transform:rotate(90deg);
      -moz-transform:rotate(90deg); 
      -o-transform:rotate(90deg);
      
      

.socialContact:before
  color #f2fdf5 
  padding 1em .3em
  font-weight normal
  font-size 2em !important
  
.twitter:hover
  &:before
    color #3498DB !important

.github:hover
  &:before
    color rgba(0, 0, 0, .5) !important

.behance:hover
  &:before
    color #1f6fee !important   

.linkedin:hover
  &:before
    color #0077b5 !important    

.dribbble:hover
  &:before
    color #ea4c89 !important   
    
#disqus_thread 
  width 96%
  margin 0px auto

////////////////////////*Tablet Design*///////////////////////////
@media screen and (max-width: 1240px)
  .ContentRight    
   & .menuDesktop
      & .menu
        & .itemMenu
          & .icon:before
            display block
            font-size 1.2em !important
          & .descrip
            font-size .9em
          
@media screen and (max-width: 1000px)
  .ContentRight
    width 100%
    padding 0px
    & .menuDesktop
      display none
    & .biography
      padding 5em 7em
      width 100%
      radius(0,0,0,0)
      
  .contentWrapper
    height auto !important
    display block
    margin 0px auto
    width 70%  
  .wrapper
    margin 0px auto
    width 100%
    & .fotoPerfil
      margin 90px auto 38px auto      
    & .menuBtn
      height 72px
      padding 40px 0px 0px 0px
      & button
        display block
  .menu
    display block
    
  #header
    display block
        
  .topMenu
    & .meMenu
      width 80%
      box-sizing(border-box)
      text-align center
      display block
      padding: 0;
      margin 20px auto !important  
      & .itemMenu:nth-last-child(1)
        border-bottom 0px
      & .itemMenu
        position relative
        padding 8px 20px !important
        border-right 0px !important
        box-sizing(border-box)
        font-size 1.4em
        border-bottom 1px solid rgba(255, 255, 255, .3)
        display block !important
        width 100%
        & a
          color white
          &:hover
            color #ff7f79 !important

  .topMenu
    & .meMenu
      margin 0px 0px
      display none
    & .avatar
      width 85px
      height 85px
      position absolute
      z-index 3
    & #menuBtn
      display block
      
  .images
    width 100%

  .wrapperMe
    height 100%
    & .view
      & .page
        width 100%
        & .containerProjects
          padding 1em 4em
        & .containerBlog
          padding 4em 6em           
        & img
          text-align center
        & .paragraph
          padding 1em 4em
  
@media screen and (max-width: 718px)  
  #header
    font-size .9em
    
////////////////////////*Mobile Design*////////////////////////////////
@media screen and (max-width: 667px)
  .contentWrapper
    margin 0px auto
    width 100%   
  .wrapper
    margin 0px auto
    width 100%
    & .menuBtn
      height 72px
      padding 40px 0px 0px 0px
      & button
        display block
    & .fotoPerfil
      margin 90px auto 38px auto 
      transition(margin,.6s) 
    & .content  
      & .btn-social:before
        top 3px

  .ContentRight
    width 100%
    padding 0px
    & .menuDesktop
      display none
    & .biography
      padding 1em 2em
      width 100%
      radius(0,0,0,0)
          
  .wrapperMe
    height 100%
    & .view
      & .page
        width 100%
        & .containerProjects
          padding 1em 1em
        & .containerBlog
          padding 2em 3em 
        & .title
          text-align left
        & img
          width 100%
        & .paragraph
          padding 1em 2em
             
  .topMenu
    & .meMenu
      margin 40px auto !important  
      
  .menu
    display block
    
  .menuDesktop
    display none
    
  .contentWrapper
    display block

    
  .images
    width 100%
  
  .skills 
    background rgba(0,0,0, .4) 
    color #ddd
    padding 0px .3em
    
  .contact
    & .wrapperContact
      width 90%
      margin 0px auto
      
  .portfolio
    padding 2em 2em
    
  #header
    display block
    height 70px
    & button
      display block
      width 39px 
      height 33px
      position absolute
      border 0px 
      top 22px
      right 22px
    & .menu
      margin-top 52px
      display block
      & .itemMenu:nth-last-child(1)
        border-bottom 0px
      & .itemMenu
        display block !important
        padding 10px 0px 
        width 100% !important
        border-bottom 1px solid rgba(255, 255, 255, .2)
        border-right 0px
        & .icon:before
          font-size 1em !important
          display inline-block
        & .descrip
          font-size 1em
          color white
          display inline-block
  #disqus_thread 
    width 92%
    margin 0px auto

