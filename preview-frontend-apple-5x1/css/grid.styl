.rows
  letter-spacing -.2em
    
.columns
  display inline-block
  letter-spacing normal
  vertical-align top
  padding 0px
  box-sizing(border-box)

.mirror-rows
  letter-spacing -.2em
  direction rtl
    
.mirror-columns
  direction ltr
  display inline-block
  letter-spacing normal
  vertical-align top
  padding 0px
  box-sizing(border-box)
  
