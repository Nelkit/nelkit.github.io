@import 'normalize'
@import 'mixins'
@import 'fonts'



html
  height: 100%
  width: 100%
body
  font-size 14px
  height: 100%
  width: 100%
  margin: 0
  padding: 0
  color: #fff
  font-family: arial
  background-image: url('../img/bg.jpg')
  background-size: 1920px 1080px
  background-repeat: no-repeat;
  background-position: top center;
  background-attachment: fixed;
  letter-spacing -.3em

a 
  text-decoration none
  color #00baff

.btn
  background transparent
  display block
  
.btn:focus
  outline none

.menuDesktop
  background rgba(0, 0, 0, .4)
  display inline-block
  vertical-align top
  width 40%
  height 90%
  overflow hidden
  margin 3em 14% 0px 13%
  radius(40px,40px,40px,40px)
  letter-spacing normal
  & .menu
    display block
    & .itemMenu
      & .icon:before
        font-size 3em !important
        display block
      & .descrip
        color white
        display block

.contentWrapper
  letter-spacing normal
  width: 33%
  height: 100%
  max-height: 100%
  overflow hidden
  display inline-block
  vertical-align top
.wrapper
  width: 104%
  height: 100%
  max-height: 100%
  overflow-y scroll
  background rgba(0, 0, 0, .4)
  & .menuBtn
    transition(background,.6s)
    overflow hidden
    width 100%
    position relative
    height auto
    padding 40px 0px
    box-sizing(border-box)
    & button
      width 39px 
      height 33px
      display none
      position absolute
      border 0px 
      top 22px
      right 22px
      
  & .fotoPerfil
    display block
    margin -26px auto 38px auto 
    width 221px
    height 221px
    radius(50%,50%,50%,50%)
    shadow(0px,2px,4px,rgba(0, 0, 0, .5))
    
  & .content
    text-align center
    & .name  
      font-family bellota
      font-size 2.2em
    & .separatorName
      width 200px
      border:1px solid rgba(255, 255, 255, .5)
    & .ocuppation
      font-family openSansRegular
      font-size 1em
    & .btn-social
      position relative
      background rgba(0, 0, 0, .6)
      width 220px
      margin .6em auto
      radius(4px,4px,4px,4px)
      font-size 1.4em
      font-family openSansRegular
      padding .6em
      color white
      &:before 
        font-size 1.7em
        position absolute
        top 7px
        left 14px
.menu
  display none
  list-style none
  padding 7px 20px
  
  & .itemMenu
    box-sizing(border-box)
    width 100%
    text-align center
    font-size 1.4em
    padding 9px
    border-bottom 1px solid rgba(255, 255, 255, .1)
  & .itemMenu:nth-last-child(1)
    border-bottom 0px
    

@media screen and (max-width: 1000px)
  .menuDesktop
    display none
  .contentWrapper
    display block
    margin 0px auto
    width 70%  
  .wrapper
    margin 0px auto
    width 100%
    & .menuBtn
      height 72px
      padding 40px 0px 0px 0px
      & button
        display block
  .menu
    display block
    
/*Mobile Design*/
@media screen and (max-width: 667px)
  .contentWrapper
    margin 0px auto
    width 95%   
  .wrapper
    margin 0px auto
    width 100%
    & .menuBtn
      height 72px
      padding 40px 0px 0px 0px
      & button
        display block
    & .fotoPerfil
      margin -26px auto 38px auto 
      transition(margin,.6s) 
    & .content  
      & .btn-social:before
        top 3px
        

  .menu
    display block
    
  .menuDesktop
    display none
    
  .contentWrapper
    display block
  
  body
    background-position -10 00px 0px

