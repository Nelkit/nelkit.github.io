@import 'normalize'
@import 'mixins'
@import 'fonts'
@import 'fullpages'
@import 'grid'
@import 'nib/images'



html
  height: 100%
  width: 100%
body
  font-size 14px
  height: 100%
  width: 100%
  margin: 0
  padding: 0
  color: #fff
  font-family: openSansRegular, arial, helvetica
  image('../img/bg.jpg')
  background-size: cover
  background-repeat: no-repeat
  background-position: top center
  background-attachment: fixed
  letter-spacing -.3em

a 
  text-decoration none
  color #353535

.link
  text-decoration underline
  font-style italic

.link:hover
  text-decoration underline

.field
  background transparent
  margin-right 10px
  margin-bottom 10px
  padding 1em 1.5em
  border 0px
  radius(3px,3px,3px,3px)
  font-size 1.3em
  box-sizing(border-box)

.field:focus
  outline 0px
  
.fieldContact
  background: rgba(0, 0, 0, .3)
  width 100%

.btn
  background transparent
  display block
  
.btn:focus
  outline none
  
.separatorBlog
  border 0px
  border-bottom 2px solid rgba(0, 0, 0, .1)
  margin 60px 0px 30px 0px

#header
  display none
  background rgba(0, 0, 0, .8)
  vertical-align bottom
  width 100%
  overflow hidden
  position fixed
  z-index 100
  letter-spacing normal
  text-align center
  & button
    display none
  & .menu
    display block
    & .itemMenu:nth-last-child(1)
      border-right 0px
    & .itemMenu
      display inline-block !important
      padding 0px 20px 
      width auto !important
      border-bottom 0px
      border-right 1px solid rgba(255, 255, 255, .2)
      & .icon:before
        font-size 1em !important
        display inline-block
      & .descrip
        font-size 1em
        color white
        display inline-block
        
& .menu
  & .active
    color #ff7f79 !important
    border-bottom 2px solid #ff7f79
  a:hover
    color #ff7f79 !important
 
.pages
   letter-spacing normal
   box-sizing(border-box)
   
.skills 
  background rgba(0,0,0, .7) 
  color #ddd
  padding 0px 4.3em
        
   
.portfolio
   background: #eff0f2
   color #36383b 
   padding 0px
   padding 2em 4em
   
.figPortfolio
  border 2px solid white
  background: white
  width 95%
  margin-right 2px
  margin-left .3em
  &:nth-last-child(1)
    margin-bottom 20px
  & .captionPortfolio
    padding 8px

.contact
  background rgba(65,11,56, .9)
  color #ddd
  
  & .wrapperContact
    width 60%
    margin 190px auto

.footer
  width 100%
  text-align center
  padding 2em 0px
  box-sizing(border-box)
  background rgba(54, 0, 50, 1) 
  letter-spacing normal

.about
  background rgba(0, 0, 0, .5)

.ContentRight
  display inline-block
  vertical-align middle
  overflow hidden
  box-sizing(border-box)
  padding 2em
  width 67%
  & .biography
    letter-spacing normal
    color #d8d6dd
    background: rgba(255, 255, 255, .8)
    radius(0px,0px,6px,6px)
    box-sizing(border-box)
    padding 2em 6em
    & h1
      color #666
      text-align center
      font-family openSansRegular
      font-weight normal
    & p
      color rgba(4, 4, 4, .6)
      font-family openSansLight
      font-weight normal
      font-size 1.4em
      line-height 1.6em

  & .menuDesktop
    background rgba(0, 0, 0, .5)
    radius(6px,6px,0px,0px)
    display block
    overflow hidden
    width auto
    margin 0px auto 0px auto
    letter-spacing normal
    text-align center
    & .menu
      display block
      & .itemMenu:nth-last-child(1)
        border-right 0px
      & .itemMenu
        padding 0px 20px 
        display inline-block !important
        width auto !important
        border-bottom 0px
        border-right 1px solid rgba(255, 255, 255, .2)
        & .icon:before
          font-size 1em !important
          display block
        & .descrip
          font-size 1em
          color white
          display inline-block

.contentWrapper
  letter-spacing normal
  width: 33%
  height: 100%
  max-height: 100%
  overflow hidden
  display inline-block
  vertical-align middle
.wrapper
  width: 104%
  height: 100%
  max-height: 100%
  overflow-y scroll
      
  & .fotoPerfil
    display block
    margin 30px auto 38px auto 
    width 221px
    height 221px
    radius(50%,50%,50%,50%)
    shadow(0px,2px,4px,rgba(0, 0, 0, .5))
    
  & .content
    text-align center
    & .name  
      font-family bellota
      font-size 2.2em
    & .separatorName
      width 200px
      border:1px solid rgba(255, 255, 255, .5)
    & .ocuppation
      font-family openSansRegular
      font-size 1em
    & .btn-social
      position relative
      background rgba(0, 0, 0, .6)
      width 220px
      margin .6em auto
      radius(4px,4px,4px,4px)
      font-size 1.4em
      font-family openSansRegular
      padding .6em
      color white
      &:before 
        font-size 1.7em
        position absolute
        top 7px
        left 14px
.menu
  display none
  list-style none
  padding 7px 20px
  
  & .itemMenu
    box-sizing(border-box)
    width 100%
    text-align center
    font-size 1.4em
    padding 9px
    border-bottom 1px solid rgba(255, 255, 255, .1)
    & a
      color white
  & .itemMenu:nth-last-child(1)
    border-bottom 0px

.topMenu
  width 100%
  height 90px
  background rgba(0, 0, 0, .4)
  position absolute
  letter-spacing normal
  z-index 2
  
  & #menuBtn
    display none
  
  & .avatar
    display block
    width 120px
    height 120px
    position absolute
    top 1em 
    left 5%
    radius(50%,50%,50%,50%)
    shadow(0px,2px,4px,rgba(0, 0, 0, .5))
    
  & .meMenu
    width 80%
    box-sizing(border-box)
    text-align center
    display block
    margin 30px auto
    & .itemMenu:nth-last-child(1)
      border-right 0px      
    & .itemMenu
      position relative
      border-right 2px solid white
      padding 0px 1.4em
      font-size 1.4em
      display inline-block !important
      & a
        color white
    & .active:after
      width: 0
      height: 0
      border-left: 21px solid transparent
      border-right: 21px solid transparent
      border-bottom: 12px solid #fff
      position: absolute
      content: ""
      top: 48px
      left: 50%
      margin-left: -25px
  & button 
    border 0px
    position absolute
    top 35px
    right 20px
    

.wrapperMe
  width 100%
  letter-spacing normal
  position absolute
  top 90px
  min-height 100%
  background #EBEDEB
  & .view
    height 100%
    & .page
      background white
      box-sizing(border-box)
      padding 20px 10em
      color black
      display block
      position relative
      min-height 100%
      width 80%
      margin 0px auto
      shadow(0px,0px,4px,rgba(0, 0, 0, .5))
      & a
        color #232424
        &:hover
          text-decoration underline
      & .title
        font-family montserrat
        font-size 2.3em
      & .subtitle
        font-family openSansRegular
        font-size 1.5em   
        color #9D9D9D
      & .date
        font-family openSansRegular
        font-size 1.3em   
        color #888
      & .paragraph
        font-family openSansRegular
        font-size 1.2em  
        line-height 1.6em 
        color #606060     
////////////////////////*Tablet Design*///////////////////////////
@media screen and (max-width: 1240px)
  .ContentRight    
   & .menuDesktop
      & .menu
        & .itemMenu
          & .icon:before
            display block
            font-size 1.2em !important
          & .descrip
            font-size .9em
          
@media screen and (max-width: 1000px)
  .ContentRight
    width 100%
    padding 0px
    & .menuDesktop
      display none
    & .biography
      padding 5em 7em
      width 100%
      radius(0,0,0,0)
      
  .contentWrapper
    height auto !important
    display block
    margin 0px auto
    width 70%  
  .wrapper
    margin 0px auto
    width 100%
    & .fotoPerfil
      margin 90px auto 38px auto      
    & .menuBtn
      height 72px
      padding 40px 0px 0px 0px
      & button
        display block
  .menu
    display block
    
  #header
    display block
        
  .topMenu
    & .meMenu
      width 80%
      box-sizing(border-box)
      text-align center
      display block
      padding: 0;
      margin 20px auto !important  
      & .itemMenu:nth-last-child(1)
        border-bottom 0px
      & .itemMenu
        position relative
        padding 8px 20px !important
        border-right 0px !important
        box-sizing(border-box)
        font-size 1.4em
        border-bottom 1px solid rgba(255, 255, 255, .3)
        display block !important
        width 100%
        & a
          color white
      & .active:after
        display none

  .topMenu
    & .meMenu
      margin 0px 0px
      display none
    & .avatar
      width 85px
      height 85px
      position absolute
      z-index 3
    & #menuBtn
      display block
      
  .images
    width 100%
  
@media screen and (max-width: 718px)  
  #header
    font-size .9em
    
////////////////////////*Mobile Design*////////////////////////////////
@media screen and (max-width: 667px)
  .contentWrapper
    margin 0px auto
    width 100%   
  .wrapper
    margin 0px auto
    width 100%
    & .menuBtn
      height 72px
      padding 40px 0px 0px 0px
      & button
        display block
    & .fotoPerfil
      margin 90px auto 38px auto 
      transition(margin,.6s) 
    & .content  
      & .btn-social:before
        top 3px

  .ContentRight
    width 100%
    padding 0px
    & .menuDesktop
      display none
    & .biography
      padding 1em 2em
      width 100%
      radius(0,0,0,0)
          
  .wrapperMe
    height 100%
    & .view
      height 100%
      & .page
        width 100%
        padding 20px 3em
        & .title
          text-align left
    
  .topMenu
    & .meMenu
      margin 40px auto !important  
      
  .menu
    display block
    
  .menuDesktop
    display none
    
  .contentWrapper
    display block

    
  .images
    width 100%
  
  .skills 
    background rgba(0,0,0, .4) 
    color #ddd
    padding 0px .3em
    
  .contact
    & .wrapperContact
      width 90%
      margin 0px auto
      
  .portfolio
    padding 2em 2em
    
  #header
    display block
    height 70px
    & button
      display block
      width 39px 
      height 33px
      position absolute
      border 0px 
      top 22px
      right 22px
    & .menu
      margin-top 52px
      display block
      & .itemMenu:nth-last-child(1)
        border-bottom 0px
      & .itemMenu
        display block !important
        padding 10px 0px 
        width 100% !important
        border-bottom 1px solid rgba(255, 255, 255, .2)
        border-right 0px
        & .icon:before
          font-size 1em !important
          display inline-block
        & .descrip
          font-size 1em
          color white
          display inline-block

